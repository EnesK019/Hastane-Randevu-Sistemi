@model Hastane_Randevu_Sistemi.Models.Doktor

@{
    ViewData["Title"] = "Details";
    var poliklinikler = ViewData["poliklinikler"] as List<Poliklinik>;
}

<h1>Details</h1>

<div>
    <h4>Doktor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoktorAd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoktorAd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoktorSoyad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoktorSoyad)
        </dd>
        <dt class="col-sm-2">
            Poliklinik Adı
        </dt>
        <dd class="col-sm-10">
        @if (poliklinikler.FirstOrDefault(p => p.PoliklinikID == Model.PoliklinikId) != null)
        {
            
                @poliklinikler.FirstOrDefault(p => p.PoliklinikID == Model.PoliklinikId).PoliklinikAdi
            
        }
        else
        {
            <p>Kayıtlı Olduğu Poliklinik Bulunamadı</p>
        }
            </dd>

    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.DoktorID">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
