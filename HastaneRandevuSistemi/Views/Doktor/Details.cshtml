@model Hastane_Randevu_Sistemi.Models.Doktor

@{
    ViewData["Title"] = "Details";
    var poliklinikler = ViewData["Poliklinikler"] as List<Poliklinik>;
    var hastaneler = ViewData["Hastaneler"] as List<Hastane>;
    Poliklinik poliklinik = null;
}

<h1>Details</h1>

<div>
    <h4>Doktor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoktorAd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoktorAd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoktorSoyad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoktorSoyad)
        </dd>
        <dt class="col-sm-2">
            Poliklinik Adı
        </dt>
        <dd class="col-sm-10">
        @if (poliklinikler.FirstOrDefault(p => p.PoliklinikID == Model.PoliklinikId) != null)
        {

                poliklinik = poliklinikler.FirstOrDefault(p => p.PoliklinikID == Model.PoliklinikId);
                <label>@poliklinik.PoliklinikAdi</label>
            
        }
        else
        {
            <p>Kayıtlı Olduğu Poliklinik Bulunamadı</p>
        }
        </dd>
        @if(poliklinik != null)
        {
            <dt class="col-sm-2">
                Hastane Adı
            </dt>
            <dd class="col-sm-10">
                @{
                    var hastane = hastaneler.FirstOrDefault(x => x.HastaneID == poliklinik.HastaneId);
                }
                @hastane.HastaneAdi
            </dd>
        }
    </dl>
</div>

<div>
    <a asp-action="Index"><img style="width: 40px; length: 25px;" src="~/images/geridon.png" /></a>
</div>
