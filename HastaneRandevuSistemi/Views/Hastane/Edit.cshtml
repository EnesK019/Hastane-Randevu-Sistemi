@model Hastane_Randevu_Sistemi.Models.Hastane
<link rel="stylesheet" href="~/css/index.css" />
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hastane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HastaneID" />
            <div class="form-group">
                <label asp-for="HastaneAdi" class="control-label"></label>
                <input asp-for="HastaneAdi" class="form-control" />
                <span asp-validation-for="HastaneAdi" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index"><img style="width: 40px; length: 25px;" src="~/images/geridon.png" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
