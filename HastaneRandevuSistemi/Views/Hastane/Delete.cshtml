@model Hastane_Randevu_Sistemi.Models.Hastane
@{
    ViewData["Title"] = "Delete";
}
<div>
    <h4>@_localization.Getkey("HastaneSil")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @_localization.Getkey("HastaneAdi");
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HastaneAdi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a asp-action="Index"><img style="width: 40px; length: 25px;" src="~/images/geridon.png" /></a>
        <input type="hidden" asp-for="HastaneID" />
        <input type="submit" value="@_localization.Getkey("Sil")" class="btn btn-danger" style="margin: 10px;" onconfirm="confirm('Silmek istediğinize emin misiniz?');" />
    </form>
</div>

