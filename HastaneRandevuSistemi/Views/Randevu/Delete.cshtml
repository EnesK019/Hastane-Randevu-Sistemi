@model Hastane_Randevu_Sistemi.Models.Randevu

@{
    ViewData["Title"] = "Delete";
    var kullanicilar = ViewData["Kullanıcılar"] as List<Kullanici>;
    var kullanici = kullanicilar.FirstOrDefault(x => x.Id == Model.KullaniciId);
    
}
<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RandevuGun)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RandevuGun)
        </dd>
        <dt class="col-sm-2">
            Randevu Saati
        </dt>
        <dd class="col-sm-10">
            @Model.RandevuSaat
        </dd>
        <dt class="col-sm-2">
            Hasta
        </dt>
        <dd class="col-sm-10">
            @kullanici.KullaniciAd @kullanici.KullaniciSoyAd
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <a asp-action="Index"><img style="width: 40px; length: 25px; margin: 10px;" src="~/images/geridon.png" /></a>
        <input type="hidden" asp-for="RandevuID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
