@model Hastane_Randevu_Sistemi.Models.Poliklinik

@{
    ViewData["Title"] = "Details";
    var hastaneler = ViewData["hastaneler"] as List<Hastane>;
}

<h1>Details</h1>

<div>
    <h4>Poliklinik</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PoliklinikAdi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PoliklinikAdi)
        </dd>
        <br />
        <dt class="col-sm-2">
            Hastane Adı
        </dt>
        @if (hastaneler.FirstOrDefault(p => p.HastaneID == Model.HastaneId) != null)
        {
            <dd class="col-sm-10">
                @hastaneler.FirstOrDefault(p => p.HastaneID == Model.HastaneId).HastaneAdi
            </dd>
        }
        else
        {
            <p>Kayıtlı Olduğu Hastane Bulunamadı</p>
        }

    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.PoliklinikID">Edit</a>
    }
     |
    <a asp-action="Index">Back to List</a>
</div>
