@model IEnumerable<Hastane_Randevu_Sistemi.Models.Poliklinik>

@{
    ViewData["Title"] = "Index";
	var hastaneler = ViewData["Hastaneler"] as List<Hastane>;
}

<table class="table table-responsive-lg">
	<thead>
		<tr>
			<th>
				<div class="row">
					<div class="col-lg-4">
						<h3>Poliklinikler</h3>
					</div>
					<div class="col-lg-6">
						<h5 style="margin-top: 15px;">Hastane</h5>
					</div>
				
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					<div class="row">
						<div class="col-lg-4">
							@Html.DisplayFor(modelItem => item.PoliklinikAdi)
						</div>
						<div class="col-lg-6">
							@{var hastane = hastaneler.FirstOrDefault(x => x.HastaneID == item.HastaneId);}
							@hastane.HastaneAdi
						</div>
						<div class="col-lg-2">
							@if (User.IsInRole("Admin"))
							{
								<a asp-action="Details" asp-route-id="@item.PoliklinikID"><img class="icon" src="~/images/detail.png" /></a>
								<a asp-action="Edit" asp-route-id="@item.PoliklinikID"><img class="icon" src="~/images/düzenle.jpg" /></a>
								<a asp-action="Delete" asp-route-id="@item.PoliklinikID"><img class="icon" src="~/images/carpi.png" /></a>
							}
							else
							{
								<a asp-action="Details" asp-route-id="@item.PoliklinikID"><img class="icon" src="~/images/detail.png" /></a>
							}
						</div>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
<div class="text-center">
	<a asp-action="Create" asp-route-id=""><img style="width: 45px; height: 45px;" src="~/images/arti.jpg" /></a>
</div>