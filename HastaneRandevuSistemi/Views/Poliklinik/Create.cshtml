@model Hastane_Randevu_Sistemi.Models.Poliklinik
@inject Hastane_Randevu_Sistemi.Data.HastaneContext _context
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Poliklinik</h4>
<hr />Model
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PoliklinikAdi" class="control-label"></label>
                <input asp-for="PoliklinikAdi" class="form-control" />
                <span asp-validation-for="PoliklinikAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HastaneId" class="control-label"></label>
            
                <select asp-for="HastaneId" class="form-select form-select-lg mb-3" aria-label="Large select example">
                        @foreach(var item in ViewData["hastaneler"] as List<Hastane>)
                        {
                            <option  value="@item.HastaneID">@item.HastaneAdi</option>
                        }
                </select>

                <span asp-validation-for="HastaneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />  
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
